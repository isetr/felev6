@model Category

@{
    ViewData["Title"] = Model.Name;
}

<h2>@Model.Name</h2>

<form asp-action="Category" asp-route-id="@Model.Id" method="get" class="form-inline">
    <input type="text" placeholder="Search" name="searchString" value="@ViewBag.SearchString" class="form-control" />
    <input type="submit" class="btn btn-default" value="Submit" />
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Hot</th>
            <th>Vegetarian</th>
            <th colspan="2">Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Hot</td>
                <td>@item.Vegan</td>
                <td>@item.Price</td>
                <td><a asp-action="AddToCart" asp-route-id="@item.Id">Add to Cart</a></td>
            </tr>
        }
    </tbody>
</table>
